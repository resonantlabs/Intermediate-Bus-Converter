{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "C:/MinGW/bin/mingw32-make -j8",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean All Files",
            "type": "shell",
            "command": "C:/MinGW/bin/mingw32-make clean",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean Application Files",
            "type": "shell",
            "command": "C:/MinGW/bin/mingw32-make cleanx",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Enter Bootloader",
            "type": "shell",
            "command": "./DFU/STFlashTool",
            "problemMatcher": []
        },
        {
            "label": "Flash Application",
            "type": "shell",
            "command": "./DFU/DfuSeCommand -c -d --fn ./obj/firmware.dfu",
            "problemMatcher": []
        }
    ]
}